<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" title="Login">
	
	<fx:Script>
		<![CDATA[
			protected function loginHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				this.parentApplication.showMain();
			}
			
			protected function cancelHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				this.parentApplication.initApp();
			}
			
			protected function createAccountHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				this.parentApplication.showAddACar1();
			}
			
			protected function loginFacebookHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				this.parentApplication.showMain();
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Placer ici les éléments non visuels (services et objets de valeur, par exemple). -->
	</fx:Declarations>
	<s:Label x="0" y="0" width="320" height="460"/>
	
	<s:Group x="14" y="155" width="291" height="93">
		<s:Rect width="100%" height="100%" 
				topLeftRadiusX="10" topLeftRadiusY="10"
				topRightRadiusX="10" topRightRadiusY="10"
				bottomLeftRadiusX="10" bottomLeftRadiusY="10"
				bottomRightRadiusX="10" bottomRightRadiusY="10">
			<s:fill>
				<s:SolidColor color="0xFFFFFF" alpha="0.7" />
			</s:fill>
		</s:Rect>
		
		<s:VGroup width="100%" height="100%">
			<s:HGroup width="100%" height="40" paddingTop="5">
				<s:Label width="82" height="40" backgroundAlpha="0" paddingLeft="10" text="Email"
						 textAlign="center" verticalAlign="middle"/>
				<s:TextInput width="190" height="40" borderVisible="false" contentBackgroundAlpha="0"
							 text="Required"/>
			</s:HGroup>
			<s:HGroup width="100%" height="40">
				<s:Label paddingLeft="10" width="82" height="40" text="Password" verticalAlign="middle" backgroundAlpha="0"/>
				<s:TextInput width="190" height="40" borderVisible="false" contentBackgroundAlpha="0"
							 text="Required" textAlign="left"/>
			</s:HGroup>
		</s:VGroup>
	</s:Group>
	<s:Button x="6" y="408" width="119" height="42" label="Back" click="cancelHandler(event)"
			  fontSize="18" styleName="button"/>
	<s:Image x="64" y="10" width="200" height="92" smooth="true" smoothingQuality="high"
			 source="assets/Fuel Factory logo.png"/>
	<s:Label x="10" y="135" color="#FCFCFC" fontSize="15" fontWeight="normal"
			 text="Please fill in your information"/>
	<s:Label x="151" y="325" text="OR&#xd;"/>
	<s:Image x="53" y="343" width="216" height="40" smooth="true" smoothingQuality="default"
			 source="assets/LoginWithFacebookPressed@2x.png" click="loginFacebookHandler(event)"/>
	<s:Button x="53" y="264" width="216" height="49" label="Sign up" click="createAccountHandler(event)"
			  fontSize="18" styleName="login"/>
</s:View>
