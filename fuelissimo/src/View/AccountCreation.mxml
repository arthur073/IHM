			 fontWeight="bold" horizontalCenter="1" text="Fuelissimo" textAlign="center"
			 verticalAlign="middle"/>
	<s:Label y="87" right="20" color="#000000" fontSize="15" fontStyle="italic" fontWeight="bold"
			 text="Manage your fuel !"/>
	<s:TextInput x="11" y="168" text="Email"/>
	<s:TextInput x="10" y="225" text="Password"/>
	<s:Button x="195" y="325" width="106" height="53" label="Create"
			  click="createAccountHandler(event)"/>
	<s:Button x="39" y="325" width="106" height="53" label="Cancel"
			  click="cancelHandler(event)"/>
	<s:Label x="8" y="129" text="Account Creation"/>
</s:View>
