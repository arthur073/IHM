	<s:TextInput x="9" y="172" height="40" text="Password"/>
	<s:TextInput x="9" y="216" height="40" text="Password again"/>
	<s:Button x="62" y="260" width="196" height="58" label="Sign up"
			  click="createAccountHandler(event)" styleName="button"/>
	<s:Image x="8" y="10" width="200" height="92" smooth="true" smoothingQuality="high" 
			 source="assets/Fuel Factory logo.png"/>
