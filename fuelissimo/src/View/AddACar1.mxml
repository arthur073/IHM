<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" title="Login">
	<fx:Style source="fuelissimo.css"/>

	<fx:Script>
		<![CDATA[
			// Code de la popup ICI
			import components.PopupHelpCar1;
			import spark.components.SkinnablePopUpContainer;
			import spark.events.ViewNavigatorEvent;
			var popup:PopupHelpCar1 = new PopupHelpCar1();
			// FIN code de la popup
			
			protected function loginHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				this.parentApplication.showMain();
			}
			
			protected function takePicture(event:MouseEvent):void
			{
				this.visible = false;
				this.parentApplication.takePicture(this);
			}
			
			protected function cancelHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				this.removeAllElements();
				this.parentApplication.showAccountCreation();
			}
			
			protected function manualInputHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				this.parentApplication.showAddACar2();
			}
			
			protected function validateHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				this.parentApplication.showAddACar2();
			}
			
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Placer ici les éléments non visuels (services et objets de valeur, par exemple). -->
		
	</fx:Declarations>
	
	<s:Label x="0" y="-1" width="320" height="460"/>
	<s:Button x="62" y="341" width="196" height="40" label="Manual input"
			  click="manualInputHandler(event)" fontSize="18" styleName="button"/>

	<s:Image x="48" y="8" width="232" height="125" smooth="true"
			 source="assets/Fuel Factory logo.png"/>
	<s:TextInput x="9" y="169" width="232" height="40" text="Plate number" 
				 focusIn="this.parentApplication.clearField(event, 'Plate number')"
				 focusOut="this.parentApplication.fillField(event,'Plate number')"/>
	<s:TextInput x="10" y="221" width="300" height="40" text="3 first letters of your name" 
				 focusIn="this.parentApplication.clearField(event, '3 first letters of your name')"
				 focusOut="this.parentApplication.fillField(event,'3 first letters of your name')"/>
	<s:Image x="246" y="153" width="66" height="66" smooth="true" smoothingQuality="high"
			 source="assets/video_camera.png" click="takePicture(event)"/>
	<s:Label x="10" y="149" color="#FCFCFC" fontSize="15" fontWeight="normal"
			 text="Please fill in your information"/>
	<s:Button x="62" y="267" width="196" height="49" label="Validate" click="validateHandler(event)"
			  fontSize="18" styleName="login"/>
	<s:Button x="6" y="408" width="119" height="42" label="Back" click="cancelHandler(event)"
			  fontSize="18" styleName="button"/>
	<s:Label x="151" y="322" text="OR&#xd;"/>
	
	<s:Image x="10" y="103" width="44" height="44" smooth="true" source="assets/Green.png" click="popup.open(this)"/>
</s:View>
